{
  "name": "php-unified/state",
  "description": "A PHP standard for application states.",
  "keywords": ["state"],
  "type": "library",
  "license": "MIT",
  "prefer-stable": true,
  "minimum-stability": "stable",
  "require": {
    "php": "^7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "squizlabs/php_codesniffer": "^3.4"
  },
  "authors": [
    {
      "name": "PHP Unified",
      "role": "Developer"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "PhpUnified\\State\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpUnified\\State\\Tests\\": "tests/"
    }
  },
  "archive": {
    "exclude": [
      "/tests",
      "/.gitignore",
      "/.travis.yml",
      "/phpunit.xml",
      "/PULL_REQUEST_TEMPLATE.md",
      "/CODE_OF_CONDUCT.md"
    ]
  }
}
